@model newCarDetailVM
@using HamroCarRental.Data;

@{
    ViewData["Title"] = "Update Car Title";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Update Car Title</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <input type="hidden" asp-for="CarNumber"/>
                            <div class="form-group">
                                <label asp-for="CarModel" class="control-label"></label>
                                <input asp-for="CarModel" class="form-control"/>
                                <span asp-validation-for="CarModel" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DateReleased" class="control-label"></label>
                                <input asp-for="DateReleased" type="date" class="form-control"/>
                                <span asp-validation-for="DateReleased" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StandardCharge" class="control-label"></label>
                                <input asp-for="StandardCharge" type="number" class="form-control"/>
                                <span asp-validation-for="StandardCharge" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PenaltyCharge" class="control-label"></label>
                                <input asp-for="PenaltyCharge" type="number" class="form-control"/>
                                <span asp-validation-for="PenaltyCharge" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CarPictureURL" class="control-label"></label>
                                <input asp-for="CarPictureURL" class="form-control"/>
                                <span asp-validation-for="CarPictureURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="StudioNumber" class="control-label"></label>
                                <select asp-for="StudioNumber" class="form-control" asp-items="ViewBag.Studios"></select>
                                <span asp-validation-for="StudioNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryNumber" class="control-label"></label>
                                <select asp-for="CategoryNumber" class="form-control" asp-items="ViewBag.CarCategories"></select>
                                <span asp-validation-for="CategoryNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BrandNumber" class="control-label"></label>
                                <select asp-for="BrandNumber" class="form-control" asp-items="ViewBag.Brands"></select>
                                <span asp-validation-for="BrandNumber" class="text-danger"></span>
                            </div>
                          @*  <div class="form-group">
                                <label asp-for="ActorNumbers" class="control-label"></label>

                                <select asp-for="ActorNumbers" class="form-control" asp-items="ViewBag.Actors" multiple></select>
                                <span asp-validation-for="ActorNumbers" class="text-danger"></span>
                            </div>*@
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview"/>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right"/>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function (){
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#CarPictureURL").val();
        })

        $("#CarPictureURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}