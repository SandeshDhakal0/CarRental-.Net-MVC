@model CarDetail

@{
    ViewData["Title"] = "car details";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.CarModel
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.CarPictureURL" width="100%" alt="@Model.CarModel">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">
                            <b>Cinema: </b>
                            <a asp-controller="Studios" asp-action="Details" asp-route-id="@Model.StudioNumber">
                                @Model.Studio.StudioName
                            </a>
                        </p>
                        <p class="card-text">
                            <b>Category: </b>
                            <a asp-controller="CarCategories" asp-action="Details" asp-route-id="@Model.CategoryNumber">
                                @Model.CarCategory.CategoryName
                            </a>
                        </p>
                        <p class="card-text">
                            <b>Brand: </b>
                            <a asp-controller="Brands" asp-action="Details" asp-route-id="@Model.BrandNumber">
                                @Model.Brand.BrandName
                            </a>
                        </p>
                        <p class="card-text">
                            <b>Date Released: </b>@Model.DateReleased.ToString("dd MMM yy")
                        </p>
                        <p class="card-text"><b>Standard Charge </b>Rs. @Model.StandardCharge</p>
                        <p class="card-text"><b>Penalty Charge </b>Rs. @Model.PenaltyCharge</p>
                      @*  <p class="card-text">
                            <b>Actors: </b>
                            <hr/>
