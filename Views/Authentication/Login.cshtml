@model HamroCarRental.Models.UserLoginModel

@{
    ViewData["Title"] = "Login";
}

@section AddCustomStyles{
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/fonts/linearicons/style.css")" rel="stylesheet"/>
}



@if (TempData["Error"] != null)
{
    <div class="col-md-12 alert alert-danger">
        <span>@TempData["Error"]</span>
    </div>
}



<section style="background-color: #f9dec0">
    <div class="wrapper" style="min-height: 110vh; min-width: 90vw">
        <div class="inner flex mx-4">


            <form asp-action="Login">
                <h3 > Login page</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-holder mt-4">
                    <span class="lnr lnr-user"></span>
                    <input asp-for="Username" class="form-control" placeholder="Username"/>
                    <span asp-validation-for="Username" class="text-danger mt-4"></span>
                </div>
                <div class="form-holder">
                    <span class="lnr lnr-lock"></span>
                    <input asp-for="Password" class="form-control" placeholder="Password"/>
                    <span asp-validation-for="Password" class="text-danger mt-4"></span>
                </div>
                <div class="form-group mt-3 mb-3 float-right">
                    <input type="submit" value="Login" class="btn btn-warning text-white px-5 " style="width: 100%"/>
                </div>
                <br />
                <a class="badge-light"  >Register</a>
            </form>
           
           
        </div>

    </div>
</section>