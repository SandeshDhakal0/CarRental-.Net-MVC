@model HamroCarRental.Models.ViewModels.LoanViewModel

<h1>Checkout</h1>

<form asp-controller="Loans" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="LoanTypeNumber">Loan Type Number:</label>
        <select asp-for="LoanTypeNumber" asp-items="Model.LoanTypes"></select>
    </div>
    <div class="form-group">
        <label asp-for="CopyNumber">Copy Number:</label>
        <select asp-for="CopyNumber" asp-items="Model.CarCopies"></select>
    </div>
    <div class="form-group">
        <label asp-for="MemberNumber">Member Number:</label>
        <select asp-for="MemberNumber" asp-items="Model.Members"></select>
    </div>
    <div class="form-group">
        <label asp-for="DateOut">Date Out:</label>
        <input asp-for="DateOut" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateDue">Date Due:</label>
        <input asp-for="DateDue" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReturnAmount">Return Amount:</label>
        <input asp-for="ReturnAmount" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
